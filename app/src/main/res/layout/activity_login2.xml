<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/detras"
    android:backgroundTint="@color/ic_cosmic_launcher_background"
    tools:context=".Login_2">

    <ImageView
        android:id="@+id/imageView26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/detras" />

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="584dp"
        android:background="@drawable/button_gradient"
        android:backgroundTint="@color/ic_cosmic_launcher_background"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/imageView26"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="238dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView25"
                android:layout_width="313dp"
                android:layout_height="238dp"
                app:srcCompat="@drawable/buho_fantastic" />
        </LinearLayout>

        <EditText
            android:id="@+id/edtUsuario"
            android:layout_width="302dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@android:color/background_light"
            android:drawableLeft="@drawable/icon_email"
            android:drawableTint="@color/red"
            android:ems="10"
            android:hint="Usuario"
            android:inputType="textPersonName"
            android:paddingLeft="5dp"
            android:textColor="@color/ic_icono_launcher_background" />

        <EditText
            android:id="@+id/edtPassword"
            android:layout_width="302dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@android:color/background_light"
            android:drawableLeft="@drawable/icon_lock"
            android:drawableTint="@color/red"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="5dp"
            android:textColor="@color/ic_icono_launcher_background" />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="295dp"
            android:layout_height="69dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="15dp"
            android:backgroundTint="@color/yellow"
            android:fontFamily="@font/montserrat_medium_italic"
            android:text="Iniciar SesiÃ³n"
            android:textColor="@color/ic_cosmic_launcher_background"
            android:textSize="18sp"
            app:cornerRadius="20px" />

        <Button
            android:id="@+id/btnRegistro"
            android:layout_width="293dp"
            android:layout_height="68dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="15dp"
            android:backgroundTint="@color/purple"
            android:fontFamily="@font/montserrat_medium_italic"
            android:onClick="Registro"
            android:text="Registrarse"
            android:textColor="#FFF"
            android:textSize="18sp"
            app:cornerRadius="20px" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>