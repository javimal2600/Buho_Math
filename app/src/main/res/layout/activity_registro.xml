<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registro">

    <ImageView
        android:id="@+id/imageView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/detras" />

    <LinearLayout
        android:layout_width="347dp"
        android:layout_height="475dp"
        android:layout_marginTop="104dp"
        android:background="@drawable/button_gradient"
        android:backgroundTint="@color/purple_dark"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_black_italic"
            android:text="Registrar"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="24sp"
            tools:text="Registrar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:orientation="vertical">

        </LinearLayout>

        <EditText
            android:id="@+id/edtNuevoUsuario"
            android:layout_width="275dp"
            android:layout_height="56dp"
            android:background="@drawable/button_gradient"
            android:backgroundTint="@color/material_dynamic_neutral80"
            android:ems="10"
            android:hint="  Ingresa nombre de usuario"
            android:inputType="text"
            android:textAlignment="textStart"
            android:textColor="@color/ic_cosmic_launcher_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:orientation="vertical"></LinearLayout>

        <EditText
            android:id="@+id/edtNuevaPassword"
            android:layout_width="275dp"
            android:layout_height="59dp"
            android:background="@drawable/button_gradient"
            android:backgroundTint="@color/material_dynamic_neutral80"
            android:ems="10"
            android:hint="   Ingresa una contraseÃ±a"
            android:inputType="textPassword"
            android:textAlignment="textStart"
            android:textColor="@color/ic_cosmic_launcher_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:orientation="vertical"></LinearLayout>

        <Button
            android:id="@+id/button11"
            android:layout_width="263dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/red"
            android:onClick="Login"
            android:text="Inicia Sesion"
            app:cornerRadius="20px" />

        <Button
            android:id="@+id/btnRegistrar"
            android:layout_width="263dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/yellow"
            android:text="Registrar"
            android:textColor="@color/purple_dark"
            app:cornerRadius="20px" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>