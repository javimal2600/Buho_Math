<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper_3"
    android:backgroundTint="@color/bg"
    tools:context=".juego2">

    <ImageView
        android:id="@+id/imageView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="matrix"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/detras" />

    <Button
        android:id="@+id/button6"
        android:layout_width="145dp"
        android:layout_height="51dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/purple_dark"
        android:onClick="ayudajuego"
        android:text="@string/help"
        android:textAlignment="center"
        android:textColor="@color/ic_icono_launcher_background"
        app:cornerRadius="20px"
        app:icon="@drawable/ayuda"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.879"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_3"
        android:layout_width="338dp"
        android:layout_height="62dp"
        android:layout_marginBottom="56dp"
        android:backgroundTint="@color/yellow"
        android:fontFamily="@font/montserrat_extrabold_italic"
        android:onClick="sig"
        android:text="@string/siguiente"
        android:textColor="@color/red"
        android:textSize="24sp"
        app:cornerRadius="20px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button8"
        android:layout_width="145dp"
        android:layout_height="51dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/purple_dark"
        android:fontFamily="@font/montserrat_medium"
        android:onClick="menu"
        android:text="Inicio"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:cornerRadius="20px"
        app:icon="@drawable/house"
        app:layout_constraintEnd_toStartOf="@+id/button6"
        app:layout_constraintHorizontal_bias="0.359"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="347dp"
        android:layout_height="475dp"
        android:layout_marginTop="104dp"
        android:background="@drawable/button_gradient"
        android:backgroundTint="@color/purple"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="216dp"
            android:layout_height="66dp"
            app:srcCompat="@drawable/ejercicio1" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="260dp"
            android:layout_height="100dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="@string/tercerpaso"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_gradient"
            android:backgroundTint="@color/green"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="261dp"
                android:layout_height="205dp">

                <RadioButton
                    android:id="@+id/rb1"
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_extrabold_italic"
                    android:text="a)"
                    android:textAllCaps="false"
                    android:textColor="@color/purple" />

                <RadioButton
                    android:id="@+id/rb2"
                    android:layout_width="134dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_extrabold_italic"
                    android:text="b)"
                    android:textColor="@color/purple" />

                <RadioButton
                    android:id="@+id/rb3"
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_extrabold_italic"
                    android:text="c)"
                    android:textColor="@color/purple" />

                <RadioButton
                    android:id="@+id/rb4"
                    android:layout_width="137dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_extrabold_italic"
                    android:text="d)"
                    android:textColor="@color/purple" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="14dp"
            android:orientation="horizontal"></LinearLayout>

        <Button
            android:id="@+id/button9"
            android:layout_width="162dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/red"
            android:fontFamily="@font/montserrat_extrabold_italic"
            android:onClick="res"
            android:text="@string/verificar"
            android:textAllCaps="false"
            android:textColor="@color/yellow"
            android:textSize="20sp"
            app:cornerRadius="200px" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>